<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HelpActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="478dp" />

    <ImageView
        android:id="@+id/help_page_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_earth_mask" />

    <TextView
        android:id="@+id/help_page_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/about_game"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/help_page_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/help_page_main"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_page_heading" />

    <TextView
        android:id="@+id/help_page_cite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/help_page_cite"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/help_page_main"
        app:layout_constraintStart_toStartOf="@+id/help_page_main"
        app:layout_constraintTop_toBottomOf="@+id/help_page_main" />

    <TextView
        android:id="@+id/help_page_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/help_page_author"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/help_page_cite"
        app:layout_constraintStart_toStartOf="@+id/help_page_cite"
        app:layout_constraintTop_toBottomOf="@+id/help_page_cite" />

    <TextView
        android:id="@+id/help_page_hyperlink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/help_page_author"
        app:layout_constraintStart_toStartOf="@+id/help_page_author"
        app:layout_constraintTop_toBottomOf="@+id/help_page_author" />

</androidx.constraintlayout.widget.ConstraintLayout>